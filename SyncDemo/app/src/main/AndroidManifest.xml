<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jboss.aerogear.syncdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".SyncApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme.Base">
        <activity
            android:name=".SignInActivity"
            android:label="@string/app_name"></activity>

        <service android:name="org.jboss.aerogear.android.authorization.oauth2.OAuth2AuthzService" />
        <service android:name="org.jboss.aerogear.android.sync.SyncService">
            <meta-data
                android:name="serverPort"
                android:value="7777" />
            <meta-data
                android:name="serverHost"
                android:value="192.168.56.1" />
            <meta-data
                android:name="serverPath"
                android:value="/sync" />
        </service>

        <activity
            android:name=".SigningInActivity"
            android:label="@string/title_activity_signing_in"></activity>
        <activity
            android:name=".DocsActivity"
            android:label="@string/title_activity_docs"></activity>
        <activity
            android:name=".sync.DiffSyncMainActivity"
            android:label="@string/title_activity_docs">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
